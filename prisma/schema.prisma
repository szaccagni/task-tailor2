datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model Todo {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
  title       String
  description String
  dueDate     DateTime
  inProgress  Boolean  @default(false)
  done        Boolean  @default(false)
  authorId    String

  @@index([authorId])
}
